{
  "manifest_version": 2,

  "name": "Happiness Jar",
  "description": "This extension helps you track happy thoughts and saves them for a cloudy day.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Happiness Jar"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}